{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "module": "es6",
    "moduleResolution": "node",
    "target": "es6",
    "lib": [
      "es2015",
      "es2017.object",
      "dom"
    ],
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  }
}
